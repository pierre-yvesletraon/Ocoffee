<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>O'Coffee</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
      crossorigin=""
    ></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
          <a class="navbar-brand" href="/">
            <img
              src="/assets/logo.svg"
              alt="Logo oCoffee"
              height="30"
              class="d-inline-block align-text-top"
            />
            oCoffee
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/"
                  >Accueil</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/catalog">Catalogue</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/allProducts">Produits</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/shop">Boutique</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/sendFiles">Ajouter des produits</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/uploadedFiles"
                  >Nouveaux produits ajoutés</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/form">Contact</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <section class="mt-5">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-6">
              <div class="card mb-4 custom-card-height">
                <div class="card-body p-2">
                  <h5 class="card-title mb-1">Notre boutique :</h5>
                  <p class="card-text m-0 small">
                    37 avenue du Café<br />
                    94000 Hauts-de-Cloques
                  </p>
                </div>
              </div>
              <div class="map-container mb-4">
                <div id="map" style="height: 400px; width: 100%"></div>
              </div>
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>Jours d'ouverture</th>
                      <th>Horaires d'ouverture</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Lundi</td>
                      <td>09h - 19h</td>
                    </tr>
                    <tr>
                      <td>Mardi</td>
                      <td>09h - 19h</td>
                    </tr>
                    <tr>
                      <td>Mercredi</td>
                      <td>09h - 19h</td>
                    </tr>
                    <tr>
                      <td>Jeudi</td>
                      <td>09h - 19h</td>
                    </tr>
                    <tr>
                      <td>Vendredi</td>
                      <td>09h - 19h</td>
                    </tr>
                    <tr>
                      <td>Samedi</td>
                      <td>09h - 20h</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer class="text-center mt-5">
      <p>© 2025 oCoffee</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const map = L.map("map").setView([48.839625, 2.50125], 14);
      L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
        maxZoom: 19,
        attribution:
          '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>',
      }).addTo(map);
      const marker = L.marker([48.839625, 2.50125]).addTo(map);
    </script>
  </body>
</html>
