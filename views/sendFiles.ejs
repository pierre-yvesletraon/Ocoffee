<%- include('./partials/header') %>

<main class="container mt-5">
  <section class="text-center text-lg-start">
    <div class="row">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h2>Uploader un fichier</h2>
        
        <% if (typeof message !== 'undefined') { %>
          <div class="alert alert-success">
            <%= message %>
          </div>
        <% } %>

        <form action="/sendFiles" enctype="multipart/form-data" method="post">
          <div class="form-group">
            <label for="uploaded_file">Choisissez une image :</label>
            <input type="file" class="form-control-file" name="uploaded_file" required>

            <label for="coffeename">Texte associ√© :</label>
            <input type="text" class="form-control" placeholder="Entrez un texte" name="coffeename" required>

            <input type="submit" value="Envoyer" class="btn btn-primary mt-3">            
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

<%- include('./partials/footer') %>