<%- include('./partials/header') %>

    <main class="container mt-5">
      <div class="jumbotron text-center position-relative">
        <div class="jumbotron-image-wrapper">
          <img
            src="assets/about.jpg"
            alt="Image de fond café"
            class="img-fluid rounded mx-auto d-block jumbotron-image"
          />
        </div>
        <div class="jumbotron-text">
          <h1 class="display-4">Notre catalogue</h1>
          <p class="lead">Découvrez nos cafés de qualité.</p>
        </div>
      </div>

      <div class="d-flex justify-content-end mb-3">
        <div style="width: 200px">
          <label for="categorySelect" class="form-label"></label>
          <select class="form-select" id="categorySelect">
            <option selected>Catégorie</option>
            <option value="1">Corsé</option>
            <option value="2">Acide</option>
            <option value="3">Fuité</option>
            <option value="4">Doux</option>
            <option value="5">Epicé</option>
            <option value="6">Chocolaté</option>
          </select>
        </div>
      </div>

      <section class="mt-5">
        <div class="row">
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img
                src="assets/coffees/100955890.png"
                class="card-img-top"
                alt="Café 1"
              />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Espresso</h5>
                <p class="card-text"></p>
                <a href="./product" class="btn btn-secondary mt-auto"
                  >Découvrir</a
                >
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img
                src="assets/coffees/100955894.png"
                class="card-img-top"
                alt="Café 2"
              />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Columbian</h5>
                <p class="card-text"></p>
                <a href="./product" class="btn btn-secondary mt-auto"
                  >Découvrir</a
                >
              </div>
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img
                src="assets/coffees/105589090.png"
                class="card-img-top"
                alt="Café 3"
              />
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">Ethiopian Yirgacheffe</h5>
                <p class="card-text"></p>
                <a href="./product" class="btn btn-secondary mt-auto"
                  >Découvrir</a
                >
              </div>
            </div>
          </div>
        </div>
      </section>
      <div class="d-flex justify-content-start mb-3">
        <a href="#" class="btn btn-secondary">Voir tout</a>
      </div>
    </main>

    <%- include('./partials/footer') %>
